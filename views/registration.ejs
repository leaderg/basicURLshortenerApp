  <body style="font-size:20px; padding:50px;">

    <% include partials/_header %>

    <h3>Register User</h3></br>
    <form action="/register" method="POST">
        <label for="registration">Enter Credentials</label></br>
        <input type="text" name="user" placeholder="email" style="width: 300px; margin: 1em"></br>
        <input type="text" name="pass" placeholder="Password" style="width: 300px; margin: 1em"></br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </body>
